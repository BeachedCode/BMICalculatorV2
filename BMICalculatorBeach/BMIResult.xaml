<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculatorBeach.BMIResult"
             Title="BMIResult">
    <VerticalStackLayout
        Margin="20"
        Padding="20">
        <Label 
            Text="BMI = 80"
            FontSize="Large"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label
            Text="Overweight"
            FontSize="Medium"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />
        
        <Button
            HorizontalOptions="Center"
            VerticalOptions="End"
            Text="Recommendations"
            FontSize="Body"
            />
    </VerticalStackLayout>
</ContentPage>