<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMICalculatorBeach.RecommendationPage"
             NavigationPage.HasNavigationBar="False">
    <Grid
        Margin="20"
        Padding="20"
        RowDefinitions="Auto,*,*"
        ColumnDefinitions="*,*"
        ColumnSpacing="10">
        <Label 
            Text="Recommendations:"
            FontSize="36"
            VerticalOptions="Start" 
            HorizontalOptions="Center" 
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"/>
        <Label
            Text=""
            FontSize="22"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            x:Name="LblRecommendation"/>
        <Button
            VerticalOptions="End"
            HorizontalOptions="Fill"
            Text="Go Back"
            FontSize="15"
            Grid.Row="3"
            Grid.Column="0"
            Clicked="GoBackClicked"/>
        <Button
            VerticalOptions="End"
            HorizontalOptions="Fill"
            Text="Main Page"
            FontSize="15"
            Grid.Row="3"
            Grid.Column="1"
            Clicked="MainPageClicked"/>
    </Grid>
</ContentPage>